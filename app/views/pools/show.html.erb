<div class="my-3">
  <h1 class="font-bold text-3xl">Pool: <%= @pool.hashid %></h1>
</div>

<div class="flex max-w-screen-xl">
  <%= turbo_stream_from @pool %>
  
  <div id="requests" class="flex flex-col bg-stone-400 p-3 w-80">
    <% @requests.each do |request| %>
      <%= turbo_frame_tag "#{request.hashid}_item" do %>
        <%= render request %>
      <% end %>
    <% end %>
  </div>

  <div class="min-w-fit max-w-xl p-2 bg-slate-300 flex-wrap">
    <%= turbo_frame_tag :request_details do %>
      <% if @requests.none? %>
        <%= render "requests/empty_state" %>
      <% end %>
    <% end %>
  </div>
</div>
