<%= turbo_stream.replace(:header_pulse_list) do %>
  <%= render HeaderListComponent.new(pool: @pool) %>
<% end %>

<%= turbo_stream.remove("#{@pulse.hashid}_item") %>

<%= turbo_stream.replace(:pulse) do %>
  <% if @pool.pulses.exists? %>
    <%= render PulseComponent.new(pulse: @pulse) %>
  <% else %>
    <%= render EmptyStateComponent.new(pool: @pool) %>
  <% end %>
<% end %>
