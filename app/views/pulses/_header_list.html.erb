<%= turbo_frame_tag :header_pulse_list do %>
  <header class="mb-3 d-flex flex-column justify-content-center">
    <span class="text-center">Requests: (<%= quantity_of_pulses %>/<%= total_pulses %>)</span>
    <div class="progress" role="progressbar" aria-label="Animated striped example" aria-valuenow="<%= quantity_of_pulses %>" aria-valuemin="0" aria-valuemax="<%= total_pulses %>">
      <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: <%= quantity_of_pulses %>%"></div>
    </div>
  </header>
<% end %>
