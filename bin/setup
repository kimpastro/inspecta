#!/usr/bin/env ruby
require "fileutils"

# path to your application root.
APP_ROOT = File.expand_path("..", __dir__)

def log(message)
  puts "[ bin/setup ] #{message}"
end

def system!(*args)
  system(*args) || log("Command #{args} failed")
end

FileUtils.chdir APP_ROOT do
  log "Installing bundler"
  system! "gem install bundler --conservative"
  system("bundle check") || system!("bundle install")

  log "Yarn install"
  system! "yarn check --check-files || yarn install"

  log "Preparing development and test database"
  system! "bin/rails db:reset || bin/rails db:prepare"

  log "Removing old logs and tempfiles"
  system! "bin/rails log:clear tmp:clear"
end
